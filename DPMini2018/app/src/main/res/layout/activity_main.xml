<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dp.minipj.dpmini.activity.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/main_nav_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/main_hamburger_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:src="@drawable/menu" />

            <ImageButton
                android:id="@+id/main_search_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/search" />

        </RelativeLayout>

        <TextView
            android:id="@+id/main_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_nav_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="2018.04"
            android:textColor="#000000"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_day_tv"
            android:layout_marginBottom="127dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/image_today"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="38dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/day" />

        <ImageView
            android:id="@+id/image_day"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/btn_day" />

        <ImageView
            android:id="@+id/image_write"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="78dp"
            android:src="@drawable/btn_write" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
