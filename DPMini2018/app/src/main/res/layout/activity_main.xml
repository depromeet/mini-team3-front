<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dp.minipj.dpmini2018.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/main_nav_layout">
            
            <ImageButton
                android:id="@+id/main_hamburger_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/menu"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/main_search_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/search"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
        
        <TextView
            android:id="@+id/main_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.04"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@+id/main_nav_layout"
            android:layout_marginTop="46dp"
            android:layout_centerHorizontal="true" />
        
        <android.support.v7.app.AlertController.RecycleListView
            android:layout_width="match_parent"
            android:id="@+id/main_rv"
            android:layout_height="300dp"
            android:layout_below="@id/main_day_tv"
            android:layout_marginTop="20dp">


        </android.support.v7.app.AlertController.RecycleListView>
        
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
