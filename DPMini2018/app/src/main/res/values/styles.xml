<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TextView"></style>

    <style name="Widget.CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/blue_23</item>
    </style>

    <style name="Widget.EditText">
        <item name="colorControlActivated">@color/blue_23</item>
        <item name="colorControlNormal">@color/gray_d8</item>
        <item name="android:textCursorDrawable">@color/blue_23</item>
        <item name="android:textColorHighlight">@color/blue_10</item>
        <item name="android:textColorHint">@color/bg_survey_title</item>
        <item name="android:textColor">@color/bg_survey_title</item>
    </style>

    <style name="AppThemeNoTitle.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeNoTitle.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBarOverlay">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>
